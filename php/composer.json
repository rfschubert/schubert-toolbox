{
    "name": "schubert/toolbox",
    "description": "Schubert Toolbox - SDK PHP com ferramentas e utilit√°rios padronizados",
    "type": "library",
    "keywords": [
        "sdk",
        "toolbox",
        "utilities"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Raphael Schubert",
            "email": "contato@schubert.com.br"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5|^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Schubert\\Toolbox\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Schubert\\Toolbox\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit tests/Unit",
        "test:integration": "phpunit tests/Integration",
        "cs-check": "phpcs --standard=PSR12 src tests",
        "cs-fix": "phpcbf --standard=PSR12 src tests",
        "stan": "phpstan analyse src"
    }
}